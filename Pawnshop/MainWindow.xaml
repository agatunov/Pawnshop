<Window x:Class="Pawnshop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pawnshop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="100">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
            <TextBlock Text="Логин" FontSize="24"></TextBlock>
            <TextBox FontSize="24" Name="loginTextBox" Width="570"></TextBox>
            <TextBlock Text="Пароль" FontSize="24"></TextBlock>
            <PasswordBox x:Name="passwordTextBox" FontSize="24"></PasswordBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                <Button x:Name="cancelButton" FontSize="24" Width="250" Height="40" Content="Отмена" Background="White" Click="cancelButton_Click"></Button>
                <Button x:Name="loginButton" FontSize="24" Width="250" Height="40" Margin="20,0,0,0" Content="Войти" Background="White" Click="loginButton_Click"></Button>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>
